{
  "name": "middle.messenger.praktikum.yandex",
  "version": "1.0.0",
  "description": "sprint_3",
  "scripts": {
    "dev": "parcel ./src/pages/*.html --no-cache",
    "build": "parcel build ./src/pages/*.html",
    "start": "npm run build && node ./server.js",
    "tscheck": "npx tsc --noEmit",
    "eslint": "npx eslint \"./src/**/*.ts\" --ext .ts",
    "csslint": "npx stylelint \"./src/**/*.scss\"",
    "lint": "npm audit && npm run tscheck && npm run eslint && npm run csslint"
  },
  "targets": {
    "default": {
      "includeNodeModules": true,
      "distDir": "./dist"
    }
  },
  "engines": {
    "node": ">=12"
  },
  "author": "Optimizitor",
  "license": "ISC",
  "devDependencies": {
    "@parcel/transformer-sass": "2.7.0",
    "@typescript-eslint/eslint-plugin": "5.38.0",
    "@typescript-eslint/parser": "5.38.0",
    "chai": "4.3.6",
    "eslint": "8.23.1",
    "eslint-config-google": "0.14.0",
    "mocha": "10.1.0",
    "parcel": "2.7.0",
    "sass": "1.54.9",
    "stylelint": "14.12.1",
    "stylelint-config-standard": "28.0.0",
    "stylelint-config-standard-scss": "5.0.0",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "express": "4.18.2"
  }
}
