{
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2020",
    ],
    "module": "es2020"
  },
  "exclude": [
    "./node_modules",
    "./dist",
    "./public"
  ]
}